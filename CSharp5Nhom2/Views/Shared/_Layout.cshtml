@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSharp5Nhom2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.jpg" alt="Logo" width="60px" height="60px" class=""/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">MagBook</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Cart" asp-action="Index">Giỏ hàng</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" aria-expanded="false">
                                Quản lý
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Tài khoản</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Sach" asp-action="Index">Sản phẩm</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="ThongKe" asp-action="Index">Hóa Đơn</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li>
                            @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

                            @if (HttpContextAccessor.HttpContext.Session.GetString("login") != null)
                            {
                                <span class="text-light">
                                    Xin chào, <strong>@HttpContextAccessor.HttpContext.Session.GetString("login")</strong>
                                    <a asp-controller="Home" asp-action="Logout" class="btn btn-danger" style="text-decoration: none; font-weight: bold;">Đăng xuất</a>
                                </span>
                            }
                            else
                            {
                                <span class="text-light">
                                    Bạn chưa đăng nhập,
                                    <a asp-controller="Home" asp-action="Login" class="btn btn-success" style="text-decoration: none; font-weight: bold;">Đăng nhập</a>
                                </span>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold text-light">BookStore</h6>
                    <p class="text-light">Chúng tôi cung cấp các giải pháp quản lý bán sách hiệu quả và tiện lợi nhất.</p>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold text-light">Sản phẩm</h6>
                    <p><a asp-action="Index" asp-controller="Home" class="text-light text-decoration-none">Sách mới</a></p>
                    <p><a asp-action="Index" asp-controller="Home" class="text-light text-decoration-none">Sách bán chạy</a></p>
                    <p><a asp-action="Index" asp-controller="Home" class="text-light text-decoration-none">Khuyến mãi</a></p>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold text-light">Liên kết hữu ích</h6>
                    <p><a href="#" class="text-light text-decoration-none">Tài khoản của bạn</a></p>
                    <p><a href="#" class="text-light text-decoration-none">Chính sách bảo mật</a></p>
                    <p><a href="#" class="text-light text-decoration-none">Điều khoản sử dụng</a></p>
                </div>
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold text-light">Liên hệ</h6>
                    <p class="text-light"><i class="fas fa-home mr-3"></i> Havard Fpoly Kiều Mai</p>
                    <p class="text-light"><i class="fas fa-envelope mr-3"></i> abcxyz@gmail.com</p>
                    <p class="text-light"><i class="fas fa-phone mr-3"></i> + 84 xxx xxx xxx</p>
                </div>
            </div>
            <hr class="mb-4">
            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p class="text-light">© 2024 Bản quyền thuộc về <strong>MagBook</strong></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .navbar {
        background-color: #343a40;
    }

        .navbar .nav-link,
        .navbar .navbar-brand {
            color: #ffffff;
        }

            .navbar .nav-link:hover,
            .navbar .navbar-brand:hover {
                color: #ffc107;
            }

    .footer {
        background-color: #343a40;
        color: #ffffff;
        padding: 40px 0;
    }

        .footer a {
            color: #ffc107;
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }

        .footer .row div {
            margin-bottom: 20px;
        }

    /* Product Cards */
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            max-height: 200px;
            object-fit: cover;
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .product-buttons {
        margin-top: 10px;
    }

        .product-buttons .btn {
            width: 48%;
        }

    /* Buttons */
    .btn-primary,
    .btn-danger {
        border-radius: 50px;
    }

    /* Table Styles */
    .table th,
    .table td {
        vertical-align: middle;
    }

    .table img {
        max-width: 80px;
        max-height: 80px;
        object-fit: cover;
    }

    /* Custom Styles for Forms and Actions */
    .custom-form {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .custom-form input[type="text"],
        .custom-form input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
        }

    .custom-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

</style>