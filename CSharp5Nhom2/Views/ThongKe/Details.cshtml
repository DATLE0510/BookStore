@model CSharp5Nhom2.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết Hóa đơn";
}

<h2>Chi tiết Hóa đơn</h2>

<div>
    <h4>Hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Hóa đơn
        </dt>
        <dd class="col-sm-10">
            @Model.IDHoaDon
        </dd>
        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @Model.NgayTao
        </dd>
        <dt class="col-sm-2">
            Số Lượng
        </dt>
        <dd class="col-sm-10">
            @Model.SoLuong
        </dd>
        <dt class="col-sm-2">
            Tổng Tiền
        </dt>
        <dd class="col-sm-10">
            @Model.TongTien
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Model.TrangThai
        </dd>
    </dl>
</div>

<h4>Sản phẩm trong hóa đơn</h4>
<table class="table">
    <thead>
        <tr>
            <th>Tên Sách</th>
            <th>Số Lượng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HoaDonChiTiets)
        {
            <tr>
                <td>@item.Sach?.TenSach</td>
                <td>@item.SoLuong</td>
                <td>@item.GiaTien</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <div>
        @if (Model.TrangThai == 0)
        {
            <form method="post" asp-action="HuyHoaDon" asp-controller="HoaDon" asp-route-id="@Model.IDHoaDon">
                <button type="submit" class="btn btn-danger">Hủy hóa đơn</button>
            </form>
        
            <form method="post" asp-action="ThanhToanHoaDon" asp-controller="HoaDon" asp-route-id="@Model.IDHoaDon" style="display:inline;">
                <button type="submit" class="btn btn-success">Thanh toán hóa đơn</button>
            </form>
        }
        <div>
            <form method="post" asp-action="MuaLai" asp-controller="HoaDon" asp-route-id="@Model.IDHoaDon">
                <button type="submit" class="btn btn-success">Mua lại</button>
            </form>
        </div>

    </div>

    <a asp-action="Index">Quay lại danh sách hóa đơn</a>
</div>
